<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_height="match_parent"
    android:background="#b0c1aa"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginTop="5dp"
                    android:text="Services provided in C-Space"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotoprinting"
                        android:text="3D Print And Scan"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="69dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotosound_booth"
                        android:padding="10dp"
                        android:text="Sound             Booth"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotodevelopment"
                        android:text="Advance Development Zone"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotodesign"
                        android:padding="10dp"
                        android:text="Media            Design           Zone"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotoOS_zone"
                        android:text="Multi OS Zone"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotocolor_printing"
                        android:padding="10dp"
                        android:text="Color Print"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotoresources"
                        android:text="Resources"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/shockerYellow"
                        android:clickable="true"
                        android:onClick="gotohours"
                        android:padding="10dp"
                        android:text="Timings"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="50dp"
                        android:background="#FEDF00"
                        android:clickable="true"
                        android:onClick="gotohelp"
                        android:text="Need Help?"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="50dp"
                        android:background="#FEDF00"
                        android:clickable="true"
                        android:onClick="gototest"
                        android:padding="10dp"
                        android:text="Feedback"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp" />

                </LinearLayout>

            <Button
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_marginStart="50dp"
                android:onClick="gotohome"
                android:text="Home"
                android:textColor="#000000"
                android:background="#FEDF00"
                android:textSize="20dp" />

            </LinearLayout>
    </ScrollView>
</RelativeLayout>